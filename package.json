{
  "name": "react-native-polar-ble",
  "version": "0.1.0-alpha.5",
  "description": "React Native bridge for polar-ble-sdk",
  "main": "lib/commonjs/index",
  "module": "lib/module/index",
  "types": "lib/typescript/index.d.ts",
  "react-native": "src/index",
  "source": "src/index",
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "cpp",
    "react-native-polar-ble.podspec",
    "!lib/typescript/example",
    "!android/build",
    "!ios/build",
    "!**/Pods",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__"
  ],
  "scripts": {
    "test": "jest",
    "typescript": "tsc --noEmit",
    "lint": "eslint \"**/*.{js,ts,tsx}\" && cd ios && Pods/SwiftLint/swiftlint --strict",
    "format": "swift-format -r -i --configuration ios/.swift-format ios",
    "prepare": "husky install && bob build",
    "release": "release-it",
    "example": "yarn --cwd example",
    "pods": "cd example && pod-install --quiet",
    "bootstrap": "yarn example && yarn && yarn pods"
  },
  "keywords": [
    "react-native",
    "ios",
    "android"
  ],
  "repository": "https://github.com/tien/react-native-polar-ble",
  "author": "Tien Nguyen Khac <tiennguyenkhac1702@gmail.com> (https://github.com/tien)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tien/react-native-polar-ble/issues"
  },
  "homepage": "https://github.com/tien/react-native-polar-ble#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^16.2.1",
    "@react-native-community/eslint-config": "^3.0.1",
    "@release-it/conventional-changelog": "^4.2.0",
    "@types/jest": "^27.4.1",
    "@types/react": "^17.0.39",
    "@types/react-native": "0.67.2",
    "commitlint": "^16.2.1",
    "eslint": "^8.26.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "pod-install": "^0.1.0",
    "prettier": "^2.5.1",
    "prettier-plugin-kotlin": "^2.1.0",
    "react": "17.0.2",
    "react-native": "0.67.3",
    "react-native-builder-bob": "^0.18.0",
    "release-it": "^14.12.5",
    "typescript": "^4.6.2"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  }
}
